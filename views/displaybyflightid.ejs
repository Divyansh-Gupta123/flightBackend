<html>
    <head>
        <style>
            .main{background-image:url('/images/back1.jpg');
                display:flex;
                justify-content:center;
            
                background-color: #8e44ad;
                height: 100vh;
               
            }
            .root{
                width:1200px;
                height:630px;
                background-color: #ecf0f1;
            }
            .heading{
                color:crimson;
                font-size: xx-large;
                font-weight: bold;
                font-family: oxgen;
                display:flex ;
                justify-content: center;
                padding:5px;
            }
        </style>
         <!--Import Google Icon Font-->
         <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
         <!--Import materialize.css-->
         <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
    
         <!--Let browser know website is optimized for mobile-->
         <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
          <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    
         <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
         <script src="/javascripts/project.js"></script>
        <script>$(document).ready(function(){
            $('select').formSelect();
          });
    
          $(document).ready(function(){
        $('.timepicker').timepicker();
      });
          </script>
        </head>
    
    <body>
      <form action="/divyansh/editdeleterecord" method="post" >
        <div class="main">
        <div class="root">
            <div class="heading"><span><img height="70px" width="150px" src='/images/indianair.png'></span>Indian flight enquery</div>
            <hr>
            <div class="row ">
                <div class="col s6">
                    <div class="input-field ">
                        <i class="material-icons prefix">flight</i>
                        <input  placeholder="Placeholder" value="<%=data.flightid%>"id="flightid" name="flightid" type="text" class="validate">
                        <label for="first_name">Flight ID</label>
                      </div>
                    </div>
                    <div class="col s6">
                        <div class="input-field ">
                           <i class="material-icons prefix">business</i>
                            <input placeholder="Placeholder" value="<%=data.companyname%>" id="companyname" name="companyname" type="text" class="validate">
                            <label for="com_name">company name</label>
                          </div>
                        </div>
                    </div>
                    
    
                    <div class="row">
                        <div class="col s3">
                          <div class="input-field ">
                            <select name="sourcestate" id="sourcestate">
                              <option value="<%=data.sourcestateid %>"disabled selected><%=data.ss %></option>
                             
                            </select> 
                            <label>source state</label>
                          </div>
                        </div>
                            <div class="col s3">
                              <div class="input-field ">
                                <select name="sourcecity" id="sourcecity">
                                  <option value="<%=data.sourcecityid %>" disabled selected><%=data.sc %></option>
                                 
                                </select>
                                <label>source city</label>
                              </div>
                                
                                </div>
    
                                <div class="col s3">
                                  <div class="input-field ">
                                    <select name="destinationstate" id="destinationstate">
                                      <option value="<%=data.destinationstateid %>" disabled selected><%=data.ds %></option>
                                     
                                    </select>
                                    <label>destination state </label>
                                  </div>
                                    
                                    </div>
    
                                    <div class="col s3">
                                      <div class="input-field ">
                                        <select name="destinationcity" id="destinationcity">
                                          <option value="<%=data.destinationcityid %>" disabled selected><%=data.dc %></option>
                                         
                                        </select>
                                        <label>destination city </label>
                                      </div>
                                        </div>

                    </div>
    
    
                    <div class="row">
                        <div class="col s3">
                            <div class="input-field ">
                                <select name="status" >
                                  <option value="" disabled selected><%=data.status %></option>
                                  <option value="1">with stop</option>
                                  <option value="2">non stop</option>
                              </select>
                                <label>Materialize Select</label>
                              </div>
                        </div>
                        <% var tclass=data.flightclass.split('#')
                          var ts=['','','']
                          for(i=0;i<tclass.length;i++)
                          {
                            if(tclass[i]=='business')
                            {
                              ts[0]='checked'
                            }
                            if(tclass[i]=='economy')
                            {
                              ts[1]='checked'
                            }
                            if(tclass[i]=='Executive')
                            {
                              ts[2]='checked'
                            }
                          }
                        
                        %>
    
                        <div class="col s1">
                         
                            <p>
                                <label>
                                  <input name="fclass" value="business" type="checkbox" < %=ts[0] %> />
                                <span>business</span>
                                </label>
                              </p>
                             
                        </div>
                        <div class="col s1">
                            <p>
                                <label>
                                  <input name="fclass" value="economy" type="checkbox"  < %=ts[1] %>/>
                                  <span>economy</span>
                                </label>
                              </p>
                        </div>
                        <div class="col s1">
                            <p>
                                <label>
                                  <input   value="executive" name="fclass" type="checkbox" < %=ts[2] %> />
                                  <span>Executive</span>
                                </label>
                              </p>
                        </div>
                        <div class="row">
                            <div class="col s3">
                              <div class="input-field">
                                      <i class="material-icons prefix">access_time</i>
                                      <input value="<%= data.sourcetimings %>"  name="sourcetime" id="sourcetime" type="text" class="timepicker">
                                      <label for="icon_Arrival time">Arrival time</label>
                                    </div>
                          
                          
                             
                          
                            </div>
                            <div class="col s3">
                              <div class="input-field">
                                      <i class="material-icons prefix">access_time</i>
                                      <input value="<%=data.destinationtiming %>"  name="destinationtime" id="destinationtime" type="text" class="timepicker">
                                      <label for="icon_destination reaching time">destination reaching time</label>
                                    </div>
                            </div>
                    </div>

                    <div class="row">
                        <div class="col s12" style="display: flex; flex-direction: row; justify-content: space-around;">
                          <p>
                            <label>
                              <input  type="checkbox"  id="days" value="monday" name="days"/>
                              <span>Monday</span>
                            </label>
                          </p>
                          <p>
                            <label>
                              <input  type="checkbox"  id="days" value="tuesday"  name="days"/>
                              <span>Tuesday</span>
                            </label>
                          </p>
                          <p>
                            <label>
                              <input  type="checkbox"  id="days" value="wednesday"  name="days"/>
                              <span>Wednesday</span>
                            </label>
                          </p>
                          <p>
                            <label>
                              <input type="checkbox" id="days" value="thursday" name="days"/>
                              <span>Thursday</span>
                            </label>
                          </p>
                          <p>
                            <label>
                              <input type="checkbox" id="days" value="Friday" name="days"/>
                              <span>Friday</span>
                            </label>
                          </p>
                          <p>
                            <label>
                              <input type="checkbox" id="days" value="saturday" name="days"/>
                              <span>Saturday</span>
                            </label>
                          </p>
                      
                        </div>
                      
                      </div>
                     

                      <div class="row">
                        <div class="col s6">
                          <button class="btn waves-effect waves-light" type="submit" name="btn">edit
                            <i class="material-icons right">send</i>
                          </button>
                          </div>
                          
                          <div class="col s6">
                            <button class="btn waves-effect waves-light" type="submit" name="btn">delete
                              <i class="material-icons right">remove</i>
                            </button>
                            </div>
                      </div>


                     
                   
        </div>
        </div>
        
    </body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>

     <!-- Compiled and minified JavaScript -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    
    </html>